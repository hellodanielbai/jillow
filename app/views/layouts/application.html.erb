<!DOCTYPE html>
<html>
  <head>
    <title>Jillow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if logged_in? %>
      <script id="bootstrap-currrent-user" type="text/javascript">
        window.currentUser = <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>
    <script type="text/javascript">
      window.splashBuy = "<%= image_url('buy.jpg') %>"
      window.splashRent = "<%= image_url('rent.jpg') %>"
      window.splashSell = "<%= image_url('sell.jpg') %>"
      window.favicon = "<%= image_url('favicon.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
